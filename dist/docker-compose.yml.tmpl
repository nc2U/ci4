services:
  # PHP FPM Service
  php:
    container_name: ci4-php
    build:
      context: php
    expose:
      - 9000
    volumes:
      - ../app:/var/www/html
    depends_on:
      - mariadb
  
  # Nginx Service
  nginx:
    container_name: ci4-web
    image: nginx:latest
    ports:
      - 8080:80
    links:
      - php
    volumes:
      - ../app:/var/www/html
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - php
  
  # MariaDB Service
  mariadb:
    container_name: ci4-db
    image: mariadb:latest
    restart: always
    command: --character-set-server=utf8 --collation-server=utf8_unicode_ci
    environment:
      MYSQL_DATABASE: my-db-name
      MYSQL_USER: my-db-user
      MYSQL_PASSWORD: my-db-password
      MYSQL_ROOT_PASSWORD: my-db-password
      TZ: Asia/Seoul
    volumes:
      - ../volume/mysql:/var/lib/mysql
      - ../volume/backups:/var/backups
      - ../volume/sql:/docker-entrypoint-initdb.d